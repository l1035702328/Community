<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="life.lzz.community.community.mapper.UserMapper">
    <insert id="insertUser" parameterType="life.lzz.community.community.pojo.model.User">
        insert into user(name,account_id,token, gmt_create, gmt_modified,avatar_url)
        values (#{name},#{accountId},#{token},#{gmtCreate},#{gmtModified},#{avatarUrl})
    </insert>

    <select id="queryUser" resultType="life.lzz.community.community.pojo.model.User">
        select * from user where token=#{token}
    </select>

    <select id="queryUserById" resultType="life.lzz.community.community.pojo.model.User">
        select * from user where id=#{id}
    </select>
</mapper>